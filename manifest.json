{
  "manifest_version": 2,

  "name": "Youtube Filthy Filter",
  "description": "This extension will filter out youtube profanity",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["test.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["popup.js"]
    }
  ],


  "permissions": [
   "activeTab",
   "tabs",
   "https://www.youtube.com/watch*"
   ]
}
